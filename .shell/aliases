# Filesystem
alias ..='cd ..'       
alias ...='cd ../..'    
alias ....='cd ../../..' 
alias l='ls -lah'  
alias la='ls -AF'   
alias ll='ls -lFh'   

# Helpers
alias grep='grep --color=auto'
alias ping='ping -c 5'    
alias df='df -h'
alias du='du -h -c'

# GIT ALIASES
alias g=git
alias ga='git add'
alias gA='git add -A'
alias gc='git commit -vm'
alias gl='git pull'
alias gp='git push'
alias gst='git status -sb'
alias gd='git diff | $GIT_EDITOR -'
alias grs='git reset --soft'
